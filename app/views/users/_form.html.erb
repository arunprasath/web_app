<p>
<%= form.label :login %>
<%= form.text_field :login %>
</p>
<p>
<%= form.label :password, form.object.new_record? ? nil : "Change password" %>
<%= form.password_field :password %>
</p>
<p>
<%= form.label :password_confirmation %>
<%= form.password_field :password_confirmation %>
</p><br />
<p>
<% if current_user.is_admin? %>
  <%= form.label :role %>
  <%= form.select :role, options_for_select(User::Role.map {|role| [role]}, @user.role) %>
<% end %>
</p>
<p>
<%= form.label :address %>
<%= form.text_field :address %>
</p>
<p>
<%= form.label :city %>
<%= form.text_field :city %>
</p>
<p>
<%= form.label :pincode %>
<%= form.text_field :pincode %>
</p>
<p>
<%= form.label :phone_no %>
<%= form.text_field :phone_no %>
</p>
<p>
<%= form.label :status %>
<%= form.select :status, options_for_select(["Active","Inactive"], @user.status) %>
</p>

<script type='text/javascript'>
  var f3 = new LiveValidation('user_pincode');
  f3.add( Validate.Numericality, { onlyInteger: true } );
  f3.add( Validate.Length, { maximum: 6 } );
  var f4 = new LiveValidation('user_phone_no');
  f4.add( Validate.Numericality, { onlyInteger: true } );
  f4.add( Validate.Length, { maximum: 12 } );
  var f2 = new LiveValidation('user_login');
  f2.add( Validate.Format, { pattern: /^[a-zA-Z 0-9]+$/ } );
  var f2 = new LiveValidation('user_city');
  f2.add( Validate.Format, { pattern: /^[a-zA-Z 0-9]+$/ } );
</script>

