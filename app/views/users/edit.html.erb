<%= link_to "Back to home", root_path  if current_user.role.eql?("normal_user")%>
<%= link_to "Back to User List", users_path  if current_user.role.eql?("admin")%>
<br /><br />
<fieldset>
<legend>Edit User</legend>
<% form_for @user, :url => { :action => "update" } do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>
</fieldset>

<br /><%= link_to "My Profile", user_path(@user) %>


